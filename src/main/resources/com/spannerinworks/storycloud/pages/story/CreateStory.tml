<html t:type="layout" title="Create Story"
  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

  <t:beaneditform object="story" submitlabel="Create Story" reorder="title,description,points,status">
    <t:parameter name="title">
      <t:label for="title"/>
      <t:textfield t:id="title" maxlength="140" value="story.title" />
    </t:parameter>
    <t:parameter name="description">
      <t:label for="description"/>
      <t:textarea t:id="description" value="story.description" />
    </t:parameter>
  </t:beaneditform>

</html>